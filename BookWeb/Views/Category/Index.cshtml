@model IEnumerable<BookWeb.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-dotted"></i>&nbsp;Create New Category</a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>
                Date Created
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td width="45%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.CreatedDatetime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-trash3"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>